//Claculation of Simpe Interest.
#include<stdio.h>
#include<conio.h>
void main()
{
 float p,r,t,si;
 clrscr();
 printf("Enter the value of P : ");
 scanf("%f",&p);
 printf("Enter the value of R : ");
 scanf("%f",&r);
 printf("Enter the value of T : ");
 scanf("%f",&t);
 si=(p*r*t)/100;
 printf("Simpe Interest : %f",si);
